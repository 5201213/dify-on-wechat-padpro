{
  "# 基础配置": "=== 必填配置项 ===",
  "channel_type": "wechatpadpro",
  "model": "gpt-4o-mini",

  "# WeChatPadPro通道配置": "=== WeChatPadPro协议配置 ===",
  "wechatpadpro_protocol_version": "8059",
  "wechatpadpro_api_host": "127.0.0.1",
  "wechatpadpro_api_port": 8059,
  "wechatpadpro_api_key": "",
  "wechatpadpro_admin_key": "YOUR_ADMIN_KEY",

  "# AI模型配置": "=== 选择一个AI服务 ===",
  "# Dify配置": "推荐使用",
  "dify_api_base": "https://api.dify.ai/v1",
  "dify_api_key": "app-xxxx",
  "dify_app_type": "chatflow",

  "# OpenAI配置": "备选方案",
  "open_ai_api_key": "YOUR_OPENAI_API_KEY",
  "open_ai_api_base": "https://api.openai.com/v1",
  "open_ai_model": "gpt-4o-mini",

  "# 其他AI服务": "可选配置",
  "coze_api_base": "https://api.coze.cn/open_api/v2",
  "coze_api_key": "",
  "coze_bot_id": "",
  "deepseek_api_base": "https://api.deepseek.com/v1",
  "deepseek_api_key": "",
  "siliconflow_api_base": "https://api.siliconflow.cn/v1/chat/completions",
  "siliconflow_api_key": "",
  "siliconflow_model": "deepseek-ai/DeepSeek-V3",
  "zhipu_ai_api_base": "https://open.bigmodel.cn/api/paas/v4",
  "zhipu_ai_api_key": "",
  "zhipuai_model": "glm-4-flash",

  "# 消息处理配置": "=== 聊天行为配置 ===",
  "single_chat_prefix": [""],
  "single_chat_reply_prefix": "",
  "group_chat_prefix": ["@bot", "bot"],
  "group_chat_reply_prefix": "",
  "group_name_white_list": ["ALL_GROUP"],
  "no_need_at": true,
  "character_desc": "你是一个有用的AI助手",
  "conversation_max_tokens": 3000,
  "expires_in_seconds": 3600,
  "temperature": 0.7,

  "# 功能开关": "=== 功能配置 ===",
  "image_recognition": true,
  "speech_recognition": false,
  "voice_reply_voice": false,
  "voice_to_text": "dify",
  "text_to_voice": "dify",

  "# 日志配置": "=== 系统配置 ===",
  "log_level": "INFO",
  "debug": false,

  "# WeChatPadPro协议说明": [
    "1. channel_type 必须设置为 'wechatpadpro'",
    "2. wechatpadpro_admin_key 必须配置有效的管理密钥",
    "3. wechatpadpro_api_key 可留空，程序会自动生成",
    "4. 协议来源: https://github.com/WeChatPadPro/WeChatPadPro",
    "5. 启动后会自动显示二维码供扫码登录"
  ]
}
